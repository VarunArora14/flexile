# Rails Environment
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=1

# Database Configuration
DATABASE_URL=postgres://username:password@postgres:5432/flexile_development

# Redis Configuration
REDIS_URL=redis://redis:6379/0
SIDEKIQ_REDIS_URL=redis://redis:6379/1

# Domain Configuration
DOMAIN=flexile.dev
APP_DOMAIN=flexile.dev
API_DOMAIN=flexile.dev

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_ORIGIN=https://flexile.dev
NEXT_PUBLIC_API_ORIGIN=https://flexile.dev
API_ORIGIN=https://flexile.dev
RAILS_INTERNAL_HOST=rails
NEXT_TELEMETRY_DISABLED=1
TZ=UTC

# Development Features
ENABLE_DEFAULT_OTP=true

# Active Record Encryption (Development keys - not for production!)
ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY=development_primary_key_32_chars_long
ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY=development_deterministic_key_32_chars
ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT=development_salt_32_characters_long

# Rails Secret Key Base (Development only)
SECRET_KEY_BASE=development_secret_key_base_64_characters_long_for_development_only

# Optional AWS Configuration (leave empty for local storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# S3_PRIVATE_BUCKET=
# S3_PUBLIC_BUCKET=

# Optional External Services (for development)
# BUGSNAG_API_KEY=
# OPENAI_API_KEY=
# WISE_API_KEY=
# WISE_PROFILE_ID=
# BUNDLE_GEMS__CONTRIBSYS__COM=

# Node Options
NODE_OPTIONS=--max-old-space-size=4096
